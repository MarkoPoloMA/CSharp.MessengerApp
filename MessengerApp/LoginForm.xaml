<Window x:Class="MessengerApp.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerApp"
        mc:Ignorable="d"
        Title="LoginForm" Height="180" Width="278" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,-4,-6">
        <TextBox x:Name="loginField" HorizontalAlignment="Left" Margin="107,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" UndoLimit="45"/>
        <PasswordBox x:Name="passField" HorizontalAlignment="Left" Margin="107,0,0,0" VerticalAlignment="Center" Width="120" PasswordChar="*"/>
        <TextBlock HorizontalAlignment="Left" Margin="34,38,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="34,0,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Center"/>
        <Button x:Name="connect" Content="Войти" HorizontalAlignment="Left" Margin="34,108,0,0" VerticalAlignment="Top" Click="connect_Click" Width="72"/>
        <Button x:Name="regist" Content="Регистрация" HorizontalAlignment="Left" Margin="155,108,0,0" VerticalAlignment="Top" Click="regist_Click"/>

    </Grid>
</Window>
